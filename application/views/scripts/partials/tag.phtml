<?php
$language = Zend_Layout::getMvcInstance()->getView()->language;
$tag_url = $this->url(array('controller' => 'tag',
                                     'action'     => 'view',
                                     'id'         => $this->id_tag,
                                     'language'   => $language),
                                     'lang_default', true);
if (isset($this->tag_size)) {
    $style = ' style="font-size:' . $this->tag_size . '%"';
} else {
    $style = '';
}

if($this->divisible) {
	?>

	<a href="<?php echo $tag_url; ?>"<?php echo $style; ?>><span class="first_tag"><?php echo stripslashes($this->name_tag); ?></span></a>
	<?php
} else {
	?>
	
	<a href="<?php echo $tag_url; ?>"<?php echo $style; ?>><span class="second_tag"><?php echo stripslashes($this->name_tag); ?></span></a>
	
	<?php	
}
