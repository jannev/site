function filterList(selected, box) {
	$("#" + box + " > .scroll-box > ul > li").each(function() {
		curClass =$(this).attr('class');
		if( !$(this).hasClass(selected) && !$(this).hasClass('popup')) {
			$(this).hide();
		} else if ($(this).hasClass(selected) && !$(this).hasClass('popup')) {
			$(this).show();
			$(this).scrollTop();
		}
	}); // endof li.each
}

